<Window x:Class="HelloID.Vault.Management.Views.Persons.ContactEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="440" Width="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="{Binding WindowTitle}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

            <!-- Error Message -->
            <TextBlock Grid.Row="1"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"/>

            <!-- Form - 2 Columns -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Contact Details -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Contact Details"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- Contact Type Selection -->
                    <StackPanel Margin="0,0,0,12"
                                Visibility="{Binding ShowContactTypeSelection, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Contact Type" FontSize="12" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Personal"
                                         FontSize="12"
                                         IsChecked="{Binding Type, Converter={StaticResource StringToBooleanConverter}, ConverterParameter='Personal'}"
                                         IsEnabled="{Binding IsPersonalEnabled}"
                                         Margin="0,0,16,0"/>
                            <RadioButton Content="Business"
                                         FontSize="12"
                                         IsChecked="{Binding Type, Converter={StaticResource StringToBooleanConverter}, ConverterParameter='Business'}"
                                         IsEnabled="{Binding IsBusinessEnabled}"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Email and Phone"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Email" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Phone Mobile" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PhoneMobile, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone Fixed" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PhoneFixed, UpdateSourceTrigger=PropertyChanged}" FontSize="12"/>
                    </Grid>
                </StackPanel>

                <!-- Right Column: Address Information -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Address Information"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Street" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AddressStreet, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Street Ext" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AddressStreetExt, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="House #" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AddressHouseNumber, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="House # Ext" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding AddressHouseNumberExt, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Postal Code" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding AddressPostal, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="City" FontSize="12" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding AddressLocality, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Country" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding AddressCountry, UpdateSourceTrigger=PropertyChanged}" FontSize="12"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Buttons -->
            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Save"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource AccentButtonStyle}"
                        FontSize="12"
                        Width="80"
                        Margin="0,0,8,0"
                        IsDefault="True"/>

                <Button Grid.Column="2"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        FontSize="12"
                        Width="80"
                        IsCancel="True"/>
            </Grid>

            <!-- Loading Overlay -->
            <Grid Grid.RowSpan="4"
                  Background="#80FFFFFF"
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ui:ProgressRing IsActive="{Binding IsLoading}" Width="50" Height="50"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
