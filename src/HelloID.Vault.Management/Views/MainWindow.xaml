<Window x:Class="HelloID.Vault.Management.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:controls="clr-namespace:HelloID.Vault.Management.Views.Controls"
        xmlns:persons="clr-namespace:HelloID.Vault.Management.Views.Persons"
        xmlns:contracts="clr-namespace:HelloID.Vault.Management.Views.Contracts"
        xmlns:import="clr-namespace:HelloID.Vault.Management.Views.Import"
        xmlns:referenceData="clr-namespace:HelloID.Vault.Management.Views.ReferenceData"
        xmlns:personsVM="clr-namespace:HelloID.Vault.Management.ViewModels.Persons"
        xmlns:contractsVM="clr-namespace:HelloID.Vault.Management.ViewModels.Contracts"
        xmlns:importVM="clr-namespace:HelloID.Vault.Management.ViewModels.Import"
        xmlns:referenceDataVM="clr-namespace:HelloID.Vault.Management.ViewModels.ReferenceData"
        xmlns:viewModels="clr-namespace:HelloID.Vault.Management.ViewModels"
        xmlns:views="clr-namespace:HelloID.Vault.Management.Views"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="{Binding Title}"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <controls:NavigationSidebar />
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentViewModel}"
                        Margin="0">
            <ContentControl.Resources>
                <!-- Main Views -->
                <DataTemplate DataType="{x:Type personsVM:PersonsViewModel}">
                    <persons:PersonsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type contractsVM:ContractsViewModel}">
                    <contracts:ContractsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type importVM:ImportViewModel}">
                    <import:ImportView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type personsVM:ContactsViewModel}">
                    <persons:ContactsView />
                </DataTemplate>

                <!-- Reference Data Views -->
                <DataTemplate DataType="{x:Type referenceDataVM:DepartmentsViewModel}">
                    <referenceData:DepartmentsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:LocationsViewModel}">
                    <referenceData:LocationsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:TitlesViewModel}">
                    <referenceData:TitlesView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:CostCentersViewModel}">
                    <referenceData:CostCentersView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:CostBearersViewModel}">
                    <referenceData:CostBearersView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:EmployersViewModel}">
                    <referenceData:EmployersView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:TeamsViewModel}">
                    <referenceData:TeamsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:DivisionsViewModel}">
                    <referenceData:DivisionsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:OrganizationsViewModel}">
                    <referenceData:OrganizationsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:SourceSystemsViewModel}">
                    <referenceData:SourceSystemsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:CustomFieldsViewModel}">
                    <referenceData:CustomFieldsView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:PrimaryContractConfigViewModel}">
                    <referenceData:PrimaryContractConfigView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type referenceDataVM:PrimaryManagerAdminViewModel}">
                    <referenceData:PrimaryManagerAdminView />
                </DataTemplate>

                <!-- Application Settings -->
                <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                    <views:SettingsView />
                </DataTemplate>

            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
