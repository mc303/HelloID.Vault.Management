<UserControl x:Class="HelloID.Vault.Management.Views.Contracts.ContractsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:helpers="clr-namespace:HelloID.Vault.Management.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded">

      <UserControl.Resources>
        <!-- BindingProxy removed - column visibility is handled in code-behind via PropertyChanged events -->

        <!-- Contract Status Filter Button Styles - BasedOn shared FilterButtonBaseStyle -->
        <Style x:Key="AllButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowAll}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PastButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowPast}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowActive}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FutureButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonBaseStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowFuture}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Panel -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Padding="16"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <Grid Grid.Column="0" Width="200" Margin="0,0,16,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="Contracts"
                              FontSize="20"
                              FontWeight="SemiBold"/>

                    <StackPanel Grid.Row="1"
                               Orientation="Horizontal"
                               Margin="0,4,0,0">
                        <TextBlock Text="{Binding FilteredCount, StringFormat='{}{0} contracts'}"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Text="{Binding ActiveFilterCount, StringFormat=' ({0} filters active)'}"
                                  FontSize="14"
                                  Foreground="{DynamicResource SystemControlHighlightAccentBrush}"
                                  Visibility="{Binding ActiveFilterCount, Converter={StaticResource CountToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>

                <!-- Search and Filter Section -->
                <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Filter Buttons -->
                    <StackPanel Grid.Column="0"
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0">
                        <Button Content="All"
                                Command="{Binding ShowAllContractsCommand}"
                                Style="{StaticResource AllButtonStyle}"/>
                        <Button Content="Past"
                                Command="{Binding ShowPastContractsCommand}"
                                Style="{StaticResource PastButtonStyle}"/>
                        <Button Content="Active"
                                Command="{Binding ShowActiveContractsCommand}"
                                Style="{StaticResource ActiveButtonStyle}"/>
                        <Button Content="Future"
                                Command="{Binding ShowFutureContractsCommand}"
                                Style="{StaticResource FutureButtonStyle}"/>
                    </StackPanel>

                    <!-- Global Search Box -->
                    <ui:AutoSuggestBox Grid.Column="1"
                                       PlaceholderText="Search all fields..."
                                       Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       QueryIcon="Find"
                                       VerticalAlignment="Center"
                                       MinWidth="600"
                                       MaxWidth="900"
                                       FontSize="14">
                        <ui:AutoSuggestBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </ui:AutoSuggestBox.InputBindings>
                    </ui:AutoSuggestBox>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:AppBarButton Icon="View"
                                    Label="Columns"
                                    Command="{Binding ShowColumnPickerCommand}"/>
                    <ui:AppBarButton Icon="Filter"
                                    Label="Advanced Search"
                                    Command="{Binding ShowAdvancedSearchCommand}"/>
                    <ui:AppBarButton Icon="ClearSelection"
                                    Label="Clear Filters"
                                    Command="{Binding ClearAdvancedFiltersCommand}"
                                    Visibility="{Binding ActiveFilterCount, Converter={StaticResource CountToVisibilityConverter}}"/>
                    <ui:AppBarButton Icon="Refresh"
                                    Label="Refresh"
                                    Command="{Binding RefreshCommand}"/>
                    <ui:AppBarButton Icon="Undo"
                                    Label="Reset Settings"
                                    Command="{Binding ResetSettingsCommand}"
                                    ToolTip="Clear search, filters, selection, and column order"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid Content -->
        <Grid Grid.Row="1">
            <DataGrid x:Name="ContractsDataGrid"
                     ItemsSource="{Binding Contracts}"
                     SelectedItem="{Binding SelectedContract}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     CanUserReorderColumns="True"
                     SelectionMode="Single"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     RowHeaderWidth="0"
                     BorderThickness="0"
                     FrozenColumnCount="3"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     EnableRowVirtualization="True"
                     EnableColumnVirtualization="True"
                     ScrollViewer.CanContentScroll="True"
                     CanUserSortColumns="True"
                     AutomationProperties.Name="Contracts list"
                     AutomationProperties.HelpText="Browse and search contracts. Double-click to view details.">
                <DataGrid.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding ViewContractCommand}"/>
                </DataGrid.InputBindings>

                <!-- Context Menu -->
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Copy" Command="ApplicationCommands.Copy">
                            <MenuItem.Icon>
                                <ui:FontIcon Glyph="&#xE8C8;"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="View" Command="{Binding ViewContractCommand}">
                            <MenuItem.Icon>
                                <ui:FontIcon Glyph="&#xE7B3;"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Edit" Command="{Binding EditContractCommand}">
                            <MenuItem.Icon>
                                <ui:FontIcon Glyph="&#xE70F;"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Delete" Command="{Binding DeleteContractCommand}">
                            <MenuItem.Icon>
                                <ui:FontIcon Glyph="&#xE74D;"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <!-- Columns are created dynamically in code-behind via CreateAllColumns() method -->
                <!-- This allows for runtime column visibility management via ColumnPicker -->

            </DataGrid>

            <!-- Loading Overlay with Progress -->
            <Border Background="{DynamicResource SystemControlPageBackgroundChromeMediumBrush}"
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                   AutomationProperties.Name="Loading data">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ui:ProgressRing IsActive="{Binding IsLoading}"
                                    Width="60"
                                    Height="60"
                                    Margin="0,0,0,16"
                                    AutomationProperties.Name="Loading"/>
                    <TextBlock Text="{Binding LoadingMessage}"
                              FontSize="16"
                              Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,8"/>
                    <ProgressBar Value="{Binding LoadingProgress}"
                                Maximum="100"
                                Width="300"
                                Height="6"
                                Foreground="{DynamicResource SystemControlHighlightAccentBrush}"
                                AutomationProperties.Name="{Binding LoadingProgress, StringFormat='Loading progress {0} percent'}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
