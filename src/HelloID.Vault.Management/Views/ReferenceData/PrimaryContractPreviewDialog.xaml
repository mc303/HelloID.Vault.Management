<Window x:Class="HelloID.Vault.Management.Views.ReferenceData.PrimaryContractPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Primary Contract Preview"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ui:WindowHelper.UseModernWindowStyle="True">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Person Info -->
            <Border Grid.Row="0"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:FontIcon Grid.Column="0"
                                 Glyph="&#xE77B;"
                                 FontSize="24"
                                 Foreground="#0078D4"
                                 VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="{Binding PersonName}"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                        <TextBlock FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,4,0,0">
                            <Run Text="External ID:"/>
                            <Run Text="{Binding PersonExternalId}" FontWeight="SemiBold"/>
                            <Run Text="  •  "/>
                            <Run Text="{Binding ContractCount, StringFormat='{}{0} contract(s)'}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Winner Banner -->
            <Border Grid.Row="1"
                    Background="#E8F5E9"
                    BorderBrush="#66BB6A"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,0,16"
                    Visibility="{Binding HasWinner, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:FontIcon Grid.Column="0"
                                 Glyph="&#xE8FB;"
                                 FontSize="20"
                                 Foreground="#2E7D32"
                                 VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Winning Contract"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding WinningContractDescription}"
                                   FontSize="12"
                                   Foreground="#1B5E20"
                                   TextWrapping="Wrap"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Steps and Contracts -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Step-by-Step Breakdown -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Selection Process"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>

                    <ItemsControl ItemsSource="{Binding SelectionSteps}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                    Background="#0078D4"
                                                    Width="24"
                                                    Height="24"
                                                    CornerRadius="12">
                                                <TextBlock Text="{Binding StepNumber}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="{Binding FieldName}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding SortDirection}"
                                                           FontSize="11"
                                                           Foreground="#666666"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>

                                        <Separator Margin="0,8,0,8"/>

                                        <ItemsControl ItemsSource="{Binding ContractOrder}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,0,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="8"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                            <ui:FontIcon Grid.Column="0"
                                                                         Glyph="&#xE945;"
                                                                         FontSize="12"
                                                                         Foreground="{Binding IsWinner, Converter={StaticResource WinnerIconColorConverter}}"
                                                                         Visibility="{Binding IsWinner, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                            <TextBlock Grid.Column="2"
                                                                       Text="{Binding DisplayValue}"
                                                                       FontSize="11"
                                                                       FontWeight="{Binding IsWinner, Converter={StaticResource WinnerFontWeightConverter}}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Right: All Contracts -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="All Contracts"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>

                    <ItemsControl ItemsSource="{Binding AllContracts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding IsPrimary, Converter={StaticResource PrimaryContractBackgroundConverter}}"
                                        BorderBrush="{Binding IsPrimary, Converter={StaticResource PrimaryContractBorderConverter}}"
                                        BorderThickness="{Binding IsPrimary, Converter={StaticResource PrimaryContractBorderThicknessConverter}}"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <!-- Status Badge -->
                                            <Border Background="{Binding ContractStatus, Converter={StaticResource ContractStatusBackgroundConverter}}"
                                                    BorderBrush="{Binding ContractStatus, Converter={StaticResource ContractStatusBorderConverter}}"
                                                    BorderThickness="1"
                                                    CornerRadius="3"
                                                    Padding="6,2"
                                                    HorizontalAlignment="Left"
                                                    Margin="0,0,0,8">
                                                <TextBlock Text="{Binding ContractStatus}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{Binding ContractStatus, Converter={StaticResource ContractStatusForegroundConverter}}"/>
                                            </Border>

                                            <!-- Key Details -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" FontSize="12" Foreground="#666666"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TypeDescription}" FontSize="12" FontWeight="SemiBold"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dates:" FontSize="12" Foreground="#666666" Margin="0,4,0,0"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" FontSize="12" Margin="0,4,0,0">
                                                    <Run Text="{Binding StartDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                                    <Run Text=" → "/>
                                                    <Run Text="{Binding EndDate, Converter={StaticResource NullEndDateConverter}}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="FTE / Hours:" FontSize="12" Foreground="#666666" Margin="0,4,0,0"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" FontSize="12" Margin="0,4,0,0">
                                                    <Run Text="{Binding Fte, StringFormat='{}{0:F2}'}"/>
                                                    <Run Text=" / "/>
                                                    <Run Text="{Binding HoursPerWeek, StringFormat='{}{0:F1}h'}"/>
                                                </TextBlock>

                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Department:" FontSize="12" Foreground="#666666" Margin="0,4,0,0"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DepartmentName}" FontSize="12" Margin="0,4,0,0"/>

                                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Manager:" FontSize="12" Foreground="#666666" Margin="0,4,0,0"/>
                                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ManagerPersonName}" FontSize="12" Margin="0,4,0,0"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Winner Badge -->
                                        <Border Grid.Column="1"
                                                Background="#4CAF50"
                                                CornerRadius="3"
                                                Padding="8,4"
                                                VerticalAlignment="Top"
                                                Visibility="{Binding IsPrimary, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel>
                                                <ui:FontIcon Glyph="&#xE8FB;"
                                                             FontSize="16"
                                                             Foreground="White"
                                                             HorizontalAlignment="Center"/>
                                                <TextBlock Text="WINNER"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>

            <!-- Footer Buttons -->
            <Border Grid.Row="3"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,0"
                    Padding="0,12,0,0"
                    Margin="0,16,0,0">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="Close"
                            Command="{Binding CloseCommand}"
                            FontSize="12"
                            Width="80"
                            IsCancel="True"/>
                </StackPanel>
            </Border>

            <!-- Loading Overlay -->
            <Grid Grid.RowSpan="4"
                  Background="#CC000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ui:ProgressRing IsActive="{Binding IsLoading}"
                                    Width="60"
                                    Height="60"
                                    Margin="0,0,0,16"/>
                    <TextBlock Text="Loading preview..."
                               FontSize="14"
                               Foreground="White"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
