<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Filter Button Base Style - Generic foundation for all filter/toggle buttons -->
    <Style x:Key="FilterButtonBaseStyle" TargetType="Button">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
    </Style>

    <!-- Filter Button Active State - Use as BasedOn for specific filter buttons -->
    <!-- Example: Create a specific style like this:
    <Style x:Key="MyAllButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonBaseStyle}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding ShowAll}" Value="True">
                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlBackgroundAccentBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundAltHighBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    -->

</ResourceDictionary>
